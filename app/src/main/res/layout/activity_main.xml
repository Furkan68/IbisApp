<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    tools:context="com.nkdroid.ibisapp.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/reclame"
        android:layout_gravity="center_horizontal|top"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentTop="false"
        android:layout_marginTop="-35dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_gravity="bottom|center_horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout">

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/swipebutton"
            android:layout_row="0"
            android:layout_column="0"
            android:adjustViewBounds="true"
            android:padding="25dp"
            android:scaleType="fitCenter"
            android:background="@drawable/swipebutton"
            android:src="@drawable/swipe_icon"
            android:layout_gravity="top|left" />

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/lcbutton"
            android:layout_row="0"
            android:layout_column="1"
            android:adjustViewBounds="true"
            android:padding="25dp"
            android:scaleType="fitCenter"
            android:background="@drawable/lcbutton"
            android:src="@drawable/lc_icon"
            android:layout_gravity="top|right" />

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/vrbutton"
            android:layout_row="1"
            android:layout_column="0"
            android:adjustViewBounds="true"
            android:padding="25dp"
            android:scaleType="fitCenter"
            android:background="@drawable/vrbutton"
            android:src="@drawable/vr_icon"
            android:layout_gravity="left|bottom" />

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/settingsbutton"
            android:layout_row="1"
            android:layout_column="1"
            android:adjustViewBounds="true"
            android:padding="25dp"
            android:scaleType="fitCenter"
            android:background="@drawable/settingsbutton"
            android:src="@drawable/settings_icon"
            android:layout_gravity="bottom|right" />
    </GridLayout>


    <!--android:paddingTop="@dimen/activity_vertical_margin"-->
</RelativeLayout>
